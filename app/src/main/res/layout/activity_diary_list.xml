<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_11"
    android:id="@+id/scrollViewLayout"
    tools:context=".listActivity"
    android:clipToOutline="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_diary"
            android:layout_width="136dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/my_diary"
            android:textAppearance="@style/my_diary"
            android:gravity="center"
            android:fontFamily="@font/font1"
            android:textColor = "#62A60C"
            android:textSize="48dp"
            />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:layout_marginTop="110dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Date: Year/Month (2022/04) -->
                <TextView
                    android:id="@+id/date"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/font1"
                    android:gravity="center"
                    android:textAppearance="@style/tue_"
                    android:textColor="#000000"
                    android:textSize="32dp" />


                <LinearLayout
                    android:id="@+id/layout0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Date: Year/Month/Day (2022/04/26) -->
                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/font1"
                            android:gravity="center"
                            android:textAppearance="@style/tue_"
                            android:textSize="28dp" />

                        <!-- Diary_list1 -->
                        <ImageView
                            android:id="@+id/image_list1"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:background="#00000000"
                            android:elevation="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Date: Year/Month/Day (2022/04/26) -->
                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="150dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34.8dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/font1"
                            android:gravity="center"
                            android:textAppearance="@style/tue_"
                            android:textSize="28dp" />

                        <!-- Diary_list2 -->
                        <ImageView
                            android:id="@+id/image_list2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="34.8dp"
                            android:layout_marginTop="8dp"
                            android:background="#00000000"
                            android:elevation="4dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>







        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"

            android:layout_marginTop="646dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/line_1" />

        <!-- homepage button -->
        <View
            android:id="@+id/icons8_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/icon_home" />

        <!-- Writing button -->
        <View
            android:id="@+id/icons8_penc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/penicon1"
            android:onClick="mOnPopupClick"
            />

        <!-- Diary button -->
        <View
            android:id="@+id/icons8_jour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/icon_diary" />

        <!-- Calendar button -->
        <View
            android:id="@+id/icons8_cale"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="251dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/icon_calendar" />

        <!-- Map button -->
        <View
            android:id="@+id/icons8_loca"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="328dp"
            android:layout_marginTop="660dp"
            android:background="@drawable/icon_map" />


    </FrameLayout>

</LinearLayout>